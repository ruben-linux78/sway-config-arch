### Sway theme ###
##################
#
font pango:Adwaita Sans Medium 11
#                       Border  Back.   Text    Indi.   child_border
client.focused          #dedede #285577 #ffffff #a0a0a0 #a0a0a0
client.unfocused        #dedede #1a1a1a #a6e3a1 #2a2e2e
client.focused_inactive #1f1f1f #161616 #a6e3a1 #1f1f1f
client.urgent           #32cd32 #1e1e2e #ffffff #32cd32
client.placeholder      #000000 #0c0c0c #ffffff #000000
client.background       #000000

default_border pixel $border_size
default_floating_border pixel $border_size_floating
hide_edge_borders smart

